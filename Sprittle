//address
Jl. Ngagel Jaya Indah No.15, Baratajaya, Kec. Gubeng, Kota SBY, Jawa Timur 60284, Indonesia

public void address(String address) throws interruptedException{
try{
Webelement address= driver.findElement(By.id("event_address").click());
address.clear();
address.sendtext(address);
}
catch (Exception e){
e.prinStackTrace();
system.out.println("failed to enter adddress");
}
}

//add service


public void addservice(){
try{
Webelement servicecountbefore= driver.findElement(By.xpath("//span[@id='service-count"]").getText();
Webelement servicebutton= driver.findElement(By.id("event-add-service").click();
Webelement servicecountafter= driver.findElement(By.xpath("//span[@id='service-count"]").getText();
if(!servicecountbefore.equalsto(servicecountafter){
System.out.println("Service event created");
}
else{
System.out.println("Service event not created");
}
}
catch(exception e){
e.printStackTrace();
System.out.println("failed to create event");
}
}


