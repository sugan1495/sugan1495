import org.openqa.selenium.*;

class Coding
{

//driver setup
try{
System.Setproperty("Webdriver.chrome.driver","C:\\chromedruver.exe");
Webdriver driver= new ChromeDriver();
}

catch(Exception e)
{
e.prinStackTrace();
system.out.println("Failed");
}

//Navigate to URL
public void navigate_Url(String url) throws interruptedException{
try{
driver.manage().windows().maximize();
driver.get(url);
Thread.sleep(2000);

}
catch (Exception e){
e.prinStackTrace();
system.out.println("Link down");
}

//Click on new Event

public void click_newEvent(){
try{
Webelement newEvent= driver.findElement(By.linkText("https://autotrucktd.testing.reach24.net/event/incidents/new").click());
}
catch(ElementNotVisibleException e1)
{
try{
JavascriptExecutor js =(JavascriptExecutor) driver;
Thread.sleep(3000);
js.executeScript("arguments[0].click();",newEvent);
}
catch (Exception e){
e.prinStackTrace();
system.out.println("Exception while clicking the element");
}
}
}
//Equipment Type

public void equipment_type(){
try{
Webelement equipmentType= driver.findElement(By.xpath("//span[@id='select2-chosen-11']").clear();
equipmentType.SendKeys("chassis");
JavascriptExecutor js =(JavascriptExecutor) driver;
Thread.sleep(3000);
js.executeScript("arguments[0].scrollIntoView(true);",equipmentType);
equipmentType.sendKeys(keys.ENTER);
}
catch(exception e){
e.printStackTrace();
System.out.println("failed to select equipment type");
}
}

//container #
public void contianer_num(){
try{
Webelement containerNum= driver.findElement(By.id("container_number").clear();
equipmentType.containerNum("ABC");
}
catch(exception e){
e.printStackTrace();
System.out.println("failed to provide container number");
}
}
